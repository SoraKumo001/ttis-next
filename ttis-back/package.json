{
  "name": "ttis",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "test": "yarn test:docker && yarn test:init && jest",
    "test:snapshot": "yarn test:docker && yarn test:init && jest -u",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:docker": "docker-compose -f docker/docker-compose.yml up -d",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:docker": "docker-compose -f docker/docker-compose.yml up -d",
    "test:init": "wait-on --tcpTimeout 5000 tcp:localhost:5432 && docker exec postgres bash -c \"dropdb -U ttis ttis-combined-test;dropdb -U ttis ttis-unit-test;createdb -U ttis ttis-combined-test;createdb -U ttis ttis-unit-test\"",
    "test-:watch": "yarn test:docker && jest --watch -u",
    "test:cov": "jest --coverage",
    "generate": "graphql-codegen --config graphql/codegen.json",
    "generate:watch": "graphql-codegen -w --config graphql/codegen.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.9",
    "@nestjs/core": "^7.0.9",
    "@nestjs/graphql": "^7.3.7",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.0.9",
    "@nestjs/typeorm": "^7.0.0",
    "apollo-server-express": "^2.13.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.0.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.5",
    "sqlite": "^4.0.7",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.13.5",
    "@graphql-codegen/introspection": "^1.13.5",
    "@graphql-codegen/typescript": "^1.13.5",
    "@graphql-codegen/typescript-operations": "^1.13.5",
    "@nestjs/cli": "^7.1.5",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.9",
    "@types/express": "^4.17.6",
    "@types/jest": "25.2.1",
    "@types/node": "^13.13.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "apollo-boost": "^0.4.7",
    "apollo-link-context": "^1.0.20",
    "apollo-server-testing": "^2.13.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "isomorphic-unfetch": "^3.0.0",
    "jest": "^26.0.1",
    "jest-async": "^1.0.1",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "25.4.0",
    "ts-loader": "^7.0.2",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3",
    "wait-on": "^5.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "globals": {
      "TEST": true
    },
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/test/"
    ],
    "moduleNameMapper": {
      "^@libs/(.+)": "<rootDir>/src/libs/$1",
      "^@test/(.+)": "<rootDir>/test/$1",
      "^src/(.+)": "<rootDir>/src/$1",
      "^@graphql/(.+)": "<rootDir>/graphql/$1"
    }
  }
}
