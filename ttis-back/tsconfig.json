{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "@test/*": [
        "./test/*"
      ],
      "@libs/*": [
        "./src/libs/*"
      ],
      "@graphql/*": [
        "./graphql/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}